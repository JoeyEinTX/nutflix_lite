#!/bin/bash
# Nutflix Service Management Script

case "$1" in
    start)
        echo "ğŸš€ Starting Nutflix services..."
        sudo systemctl start nutflix
        sudo systemctl start nutflix-web
        echo "âœ… Services started!"
        ;;
    stop)
        echo "ğŸ›‘ Stopping Nutflix services..."
        sudo systemctl stop nutflix-web
        sudo systemctl stop nutflix
        echo "âœ… Services stopped!"
        ;;
    restart)
        echo "ğŸ”„ Restarting Nutflix services..."
        sudo systemctl restart nutflix
        sudo systemctl restart nutflix-web
        echo "âœ… Services restarted!"
        ;;
    status)
        echo "ğŸ“Š Nutflix Camera System:"
        sudo systemctl status nutflix --no-pager -l
        echo ""
        echo "ğŸ“Š Nutflix Web Dashboard:"
        sudo systemctl status nutflix-web --no-pager -l
        ;;
    logs)
        if [ "$2" == "web" ]; then
            echo "ğŸ“‹ Following web dashboard logs (Ctrl+C to exit):"
            sudo journalctl -u nutflix-web -f
        else
            echo "ğŸ“‹ Following camera system logs (Ctrl+C to exit):"
            sudo journalctl -u nutflix -f
        fi
        ;;
    enable)
        echo "âœ… Enabling auto-start on boot..."
        sudo systemctl enable nutflix
        sudo systemctl enable nutflix-web
        echo "âœ… Auto-start enabled!"
        ;;
    disable)
        echo "âŒ Disabling auto-start on boot..."
        sudo systemctl disable nutflix
        sudo systemctl disable nutflix-web
        echo "âœ… Auto-start disabled!"
        ;;
    *)
        echo "ğŸ¥œ Nutflix Service Manager"
        echo ""
        echo "Usage: $0 {start|stop|restart|status|logs|enable|disable}"
        echo ""
        echo "Commands:"
        echo "  start    - Start both camera system and web dashboard"
        echo "  stop     - Stop both services"
        echo "  restart  - Restart both services"
        echo "  status   - Show status of both services"
        echo "  logs     - Follow camera system logs (use 'logs web' for dashboard)"
        echo "  enable   - Enable auto-start on boot"
        echo "  disable  - Disable auto-start on boot"
        echo ""
        echo "Examples:"
        echo "  $0 start"
        echo "  $0 logs"
        echo "  $0 logs web"
        echo "  $0 status"
        exit 1
        ;;
esac
